<% layout('./layout/boilderplate.ejs') %>

<div class="container mt-5">
  <h1 class="text-center">Address Details</h1>
  <form action="/signup/address" method="POST" class="p-4 border rounded shadow">
    <input type="hidden" name="userId" value="<%= userId %>" />

    <div class="form-group">
      <label for="street">Street:</label>
      <input type="text" id="street" name="street" class="form-control" placeholder="Enter your street" required />
    </div>

    <div class="form-group">
      <label for="city">City:</label>
      <input type="text" id="city" name="city" class="form-control" placeholder="Enter your city" required />
    </div>

    <div class="form-group">
      <label for="state">State:</label>
      <input type="text" id="state" name="state" class="form-control" placeholder="Enter your state" required />
    </div>

    <div class="form-group">
      <label for="region">Region:</label>
      <select id="region" name="region" class="form-control">
        <option value="paldi">Paldi</option>
        <option value="bopal">Bopal</option>
        <option value="zundal">Zundal</option>
        <option value="gift-city">Gift-City</option>
        <option value="university">University</option>
      </select>
    </div>

    <div class="form-group">
      <label for="postalCode">Postal Code:</label>
      <input type="text" id="postalCode" name="postalCode" class="form-control" placeholder="Enter postal code" required />
    </div>

    <div class="form-group">
      <label for="country">Country:</label>
      <input type="text" id="country" name="country" class="form-control" placeholder="Enter your country" />
    </div>

    <button type="submit" class="btn btn-primary btn-block">Submit</button>
  </form>
</div>