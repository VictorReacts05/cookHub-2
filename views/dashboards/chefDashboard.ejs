  <!-- Chef Description Form -->
  <div class="card mb-4">
    <div class="card-body">
      <h2 class="text-center">Update Chef Description</h2>
      <form id="descriptionForm" action="/updateDescription" method="POST">
        <div class="mb-3">
          <label for="chefDescription" class="form-label">Description</label>
          <textarea id="chefDescription" name="chefDescription" rows="3" class="form-control" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary w-100">Update Description</button>
      </form>
    </div>
  </div>

  <!-- Chef Experience Form -->
  <div class="card mb-4">
    <div class="card-body">
      <h2 class="text-center">Update Chef Experience</h2>
      <form id="experienceForm" action="/updateExperience" method="POST">
        <div class="mb-3">
          <label for="chefExperience" class="form-label">Experience (in years)</label>
          <input type="number" id="chefExperience" name="chefExperience" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary w-100">Update Experience</button>
