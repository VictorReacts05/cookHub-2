<!-- Motivational Section -->
<div class="card mt-4">
  <div class="card-body text-center">
    <h2>Chef's Tips</h2>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Plan your schedule in advance for smooth workflow.</li>
      <li class="list-group-item">Keep experimenting to enhance your culinary skills.</li>
      <li class="list-group-item">Work-life balance is key to staying creative.</li>
    </ul>
    <blockquote class="blockquote mt-4">
      <p>"Cooking is an art, but all art requires knowing something about the techniques and materials."</p>
      <footer class="blockquote-footer">Nathan Myhrvold</footer>
    </blockquote>
  </div>
</div>

<!-- Customer Bookings Section -->
<div class="card mt-4">
  <div class="card-body">
    <h2 class="text-center">Customer Bookings</h2>
    <table class="table table-striped table-bordered mt-4">
      <thead class="table-dark">
        <tr>
          <th>Customer Name</th>
          <th>Customer Email</th>
          <th>Phone</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Service Fee</th>
          <th>Members</th>
        </tr>
      </thead>
      <tbody>
        <% if (bookings && bookings.length > 0) { %>
        <% bookings.forEach(booking => { %>
        <tr>
          <td><%= booking.clientid.name %></td>
          <td><%= booking.clientid.email %></td>
          <td><%= booking.clientid.phone || "N/A" %></td>
          <td><%= new Date(booking.monthStartDate).toLocaleDateString() %></td>
          <td><%= new Date(booking.monthEndDate).toLocaleDateString() %></td>
          <td><%= booking.serviceFees ? booking.serviceFees.amount : "N/A" %></td>
          <td><%= booking.noOfMembers %></td>
        </tr>
        <% }); %>
        <% } else { %>
        <tr>
          <td colspan="7" class="text-center">No bookings available.</td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>









  <!-- Chef Absence Table -->   
  <div class="card">
    <div class="card-body">
      <h2 class="text-center">Chef Absence Periods</h2>
      <table class="table table-striped table-bordered mt-4">
        <thead class="table-dark">
          <tr>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Reason</th>
            <th>Status</th>
            <th>Delete Request</th>
          </tr>
        </thead>
        <tbody>
          <% if (chefAbsence.absencePeriods && chefAbsence.absencePeriods.length > 0) { %>
          <% chefAbsence.absencePeriods.forEach(period => { %>
          <tr>
            <td><%= new Date(period.start).toLocaleDateString() %></td>
            <td><%= new Date(period.end).toLocaleDateString() %></td>
            <td><%= period.reason %></td>
            <td><%= period.status %></td>
            <td>
              <form action="/deleteAbsencePeriod" method="POST">
                <!-- Include the logged-in chef's ID if required -->
                <input type="hidden" name="chefId" value="<%= chefAbsence.chefId %>" />
                <input type="hidden" name="absencePeriodId" value="<%= period._id %>" />
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>              
            </td>
          </tr>
          <% }) %>
          <% } else { %>
          <tr>
            <td colspan="3" class="text-center">No absence periods recorded.</td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>



 
</div>
</div>


