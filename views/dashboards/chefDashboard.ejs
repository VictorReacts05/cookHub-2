<div class="container my-5">
  <!-- User Information Section -->
  <div class="card mb-4">
    <div class="card-body">
      <h1 class="text-center mb-4">User Information</h1>
      <div class="row">
        <div class="col-md-6">
          <p><strong>Name:</strong> <%= user.name %></p>
          <p><strong>Email:</strong> <%= user.email %></p>
          <p><strong>Gender:</strong> <%= user.gender %></p>
        </div>
        <div class="col-md-6">
          <p><strong>Role:</strong> <%= role %></p>
          <p><strong>Phone:</strong> <%= user.phone %></p>
          <p><strong>Aadhaar Card:</strong> <%= user.aadhaarCard %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <p><strong>PAN Card:</strong> <%= user.panCard %></p>
        </div>
        <div class="col-md-6">
          <p><strong>Driving License:</strong> <%= user.drivingLicenseNo %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Chef Absence Form -->
  <div class="card mb-4">
    <div class="card-body">
      <h2 class="text-center">Chef Absence Form</h2>
      <form id="absenceForm" action="chefAvailability" method="POST">
        <div id="absencePeriodsContainer">
          <h4 class="mt-3">Holidays</h4>
          <div class="mb-3">
            <label for="absenceStart" class="form-label">Start Date</label>
            <input type="date" id="absenceStart" name="absencePeriods[0][start]" class="form-control" required />
          </div>
          <div class="mb-3">
            <label for="absenceEnd" class="form-label">End Date</label>
            <input type="date" id="absenceEnd" name="absencePeriods[0][end]" class="form-control" required />
          </div>
          <div class="mb-3">
            <label for="absenceReason" class="form-label">Reason</label>
            <textarea id="absenceReason" name="absencePeriods[0][reason]" rows="3" class="form-control"></textarea>
          </div>
        </div>
        <button type="submit" class="btn btn-primary w-100">Submit</button>
      </form>
    </div>
  </div>

  <!-- Chef Details Section -->
  <div class="card mt-4">
    <div class="card-body">
      <h2 class="text-center">Chef Details</h2>
      <p><strong>Description:</strong> <%= chefDescription %></p>
      <p><strong>Experience:</strong> <%= chefExperience %> years</p>
      <% if (chefAddress && chefAddress.street) { %>
      <p><strong>Address:</strong> <%= chefAddress.street %>, <%= chefAddress.city %>,
        <%= chefAddress.state %>, <%= chefAddress.postalCode %>, <%= chefAddress.country %> <%= chefAddress.region  %></p>
      <% if (chefAddress.landmark) { %>
      <p><strong>Landmark:</strong> <%= chefAddress.landmark %></p>
      <% } %>
      <% } else { %>
      <p>No address information available.</p>
      <% } %>
    </div>
  </div>


